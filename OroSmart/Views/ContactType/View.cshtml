@model ContactType
@inject LanguageService language;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@language.Getkey("contacttypedetails")</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/ContactTypes/contactType.css" asp-append-version="true" />
    <style>
        .center-container {
            display: flex;
            justify-content: center;
            align-items: flex-start; 
            height: 100vh;
            padding-top: 50px; 
            
        }

        .custom-container {
            max-width: 600px;
            max-height: 100%;
            width: 100%;
            margin-top: 10px;
            margin-bottom: 10px;
            background-color: white; 
            padding: 20px; 
            border-radius: 10px; 
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1); 
        }

        form {
            width: 100%;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="center-container">
        <div class="container custom-container">
            <h2 class="text-center">Contact Type Details</h2>
            <form>
                <div class="form-group">
                    <label class="control-label">@language.Getkey("name")</label>
                    <input class="form-control" value="@Model.Name" readonly />
                </div>

                <div class="form-group">
                    <label class="control-label">@language.Getkey("note")</label>
                    <input class="form-control" value="@Model.Note" readonly />
                </div>
            </form>

            <div class="row">
                <div class="col">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block">@language.Getkey("edit")</a>
                </div>
                <div class="col">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block">@language.Getkey("delete")</a>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-secondary btn-block">@language.Getkey("back")</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
