@model Customer
@inject LanguageService language;

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2 class="text-danger">@language.Getkey("deletecustomer")</h2>
        </div>
        <div class="card-body">
            <h4 class="mb-4">@language.Getkey("deletesentence")</h4>
            <div class="mb-4">
                <h5>@language.Getkey("customerinfo")</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        @language.Getkey("name")
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
            </div>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger">@language.Getkey("delete")</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">@language.Getkey("cancel")</a>
            </form>
        </div>
    </div>
</div>
