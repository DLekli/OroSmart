@Html.AntiForgeryToken()
@* @model OroSmart.Models.Customer *@
@using OroSmart.Data.ViewModels;
@model CustomerViewModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Customer</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/Customers/customer.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#customerInfo">Customer Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#workLocation">Customer Work Location</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="customerInfo">
                <h2 class="text-center">Add a Customer</h2>
                <form asp-controller="Customer" asp-action="Create" method="post">
                    <input type="hidden" asp-for="Customer.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Customer.Name" class="control-label">Customer Name</label>
                        <input asp-for="Customer.Name" class="form-control" />
                        <span asp-validation-for="Customer.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Customer.VAT" class="control-label">VAT</label>
                        <input asp-for="Customer.VAT" class="form-control" />
                        <span asp-validation-for="Customer.VAT" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Customer.DateOfRegistration" class="control-label">Date of Registration</label>
                        <input asp-for="Customer.DateOfRegistration" type="date" class="form-control" />
                        <span asp-validation-for="Customer.DateOfRegistration" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <input asp-for="Customer.Active" class="form-check-input" />
                            <label asp-for="Customer.Active" class="form-check-label">Active</label>
                        </div>
                        <span asp-validation-for="Customer.Active" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="workLocation">
                <h2 class="text-center">Customer Work Location</h2>
                 <form asp-controller="CustomersWorkLocation" asp-action="CreateWorkLocation" method="POST">
                     <input type="hidden" name="customerId" asp-for="Customer.Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="WorkLocation.City" class="control-label">City</label>
                        <input asp-for="WorkLocation.City" class="form-control" />
                        <span asp-validation-for="WorkLocation.City" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="WorkLocation.Address" class="control-label">Address</label>
                        <input asp-for="WorkLocation.Address" class="form-control" />
                        <span asp-validation-for="WorkLocation.Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="WorkLocation.PostalCode" class="control-label">Postal Code</label>
                        <input asp-for="WorkLocation.PostalCode"  class="form-control" />
                        <span asp-validation-for="WorkLocation.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input asp-for="WorkLocation.IsHeadquarters" class="form-check-input" />
                            <label asp-for="WorkLocation.IsHeadquarters" class="form-check-label">Headquarters</label>
                        </div>
                        <span asp-validation-for="WorkLocation.IsHeadquarters" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="WorkLocation.Notes" class="control-label">Notes</label>
                        <textarea asp-for="WorkLocation.Notes" class="form-control"></textarea>
                        <span asp-validation-for="WorkLocation.Notes" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create Work Location</button>
                    </div>
                    
                </form>

            </div>
        </div>

        <div class="text-center">
            <a asp-controller="Customer" asp-action="Index">Back to List</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
