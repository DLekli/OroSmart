@using Microsoft.AspNetCore.Identity
@inject LanguageService language
<div class="container" style="margin-top:30px;">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-5 mb-3">
            <div class="card">
                <div class="card-header">Settings Menu</div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Settings" asp-action="userInfo" class="list-group-item list-group-item-action"> <i class="bi bi-person"></i> User Info</a>
                    <a asp-controller="Settings" asp-action="ChangePassword" class="list-group-item list-group-item-action"> <i class="bi bi-lock"></i> Change Password</a>
                    <a asp-controller="Settings" asp-action="DisplayLanguages" class="list-group-item list-group-item-action"> <i class="bi bi-globe-europe-africa"></i> @language.Getkey("language")</a>

                    <!-- Add more options as needed -->
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">Account Settings</div>

                <div class="card-body" id="settingsContent">
                    <!-- Initial content or empty area for selected settings -->
                    Select an option from the menu on the left.
                </div>
            </div>
        </div>
    </div>
</div>