@using OroSmart.Data.ViewModels;
@model LoginVM;
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
@{
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

@{
    ViewData["Title"] = "Log in to your account";
}

<link href="@Url.Content("~/css/Login/style.css")" rel="stylesheet" />
<link href="@Url.Content("~/css/Login/main.css")" rel="stylesheet" />

<!-- Log in section  -->
<div class="bigContainer">
    
    <div class="row">
        <div class="col-md-6 column1" style="max-height: 100%">
            <img src="~/img/Login/Coming-Soon.jpg" alt="">
        </div>
       
        <div class="col-md-6 column2">
            <section class="ftco-section">
                <div class="container" style="margin-top: -50px;">
                    <div class="row justify-content-center">
                        <div style="font-family: 'Crimson';">
                            <img src="~/img/Login/ComingSoonLogo.jpg" alt="Your Image" id="logo">
                        </div>
                    </div>
                    
                    <div class="row justify-content-center">
                        <div class="col-md-6 col-lg-5">
                            <div class="login-wrap p-4 p-md-5">
                                <div class="icon d-flex align-items-center justify-content-center">
                                    <img src="~/img/Login/icons8-diamond.gif" alt="Your Image" class="round-image">
                                </div>
                                <h3 class="text-center mb-4">Have an account?</h3>
                                @if (TempData["Error"] != null)
                                {
                                    <div class="col-md-12 alert alert-danger">
                                        <span><b>Sorry!</b> - @TempData["Error"] </span>
                                    </div>
                                }
                                <form asp-action="Login" class="login-form">
                                    <div class="form-group">
                                        <input asp-for="EmailAddress" type="text" class="form-control rounded-left" placeholder="Username" required>
                                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" type="password" class="form-control rounded-left" placeholder="Password" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Log in</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>


<script src="@Url.Content("~/js/Login/nprogress.js")"></script>

<script>

    {    

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

</script>




