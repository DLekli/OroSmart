@model OroSmart.Data.ViewModels.ChangePasswordVM
@inject LanguageService language

@{
    ViewData["Title"] = @language.Getkey("settings");
    var userEmail = ViewBag.UserEmail as string;
}

<div class="container" style="margin-top:30px;">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-5 mb-3">
            <div class="card">
                <div class="card-header">Settings Menu</div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Settings" asp-action="userInfo" class="list-group-item list-group-item-action"> <i class="bi bi-person"></i> User Info</a>
                    <a asp-controller="Settings" asp-action="ChangePassword" class="list-group-item list-group-item-action"> <i class="bi bi-lock"></i> Change Password</a>
                    <a asp-controller="Settings" asp-action="DisplayLanguages" class="list-group-item list-group-item-action"> <i class="bi bi-globe-europe-africa"></i> @language.Getkey("language")</a>
                    <!-- Add more options as needed -->
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">Change Password</div>

                <div class="card-body" id="settingsContent">
                    <!-- Initial content or empty area for selected settings -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="OldPassword" style="margin-bottom: 10px;"></label>
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group" style="margin-top: 15px;">
                            <label asp-for="NewPassword" style="margin-bottom: 10px;"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group" style="margin-top: 15px;">
                            <label asp-for="ConfirmNewPassword" style="margin-bottom: 10px;"></label>
                            <input asp-for="ConfirmNewPassword" class="form-control" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary" style="margin-top: 15px;">Change Password</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>